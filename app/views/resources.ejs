<%include partials/header%>
    <div class="jumbotron"></div>
    <nav class="navbar navbar-fixed-top nav-white" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Engineering Assistant</a>
            </div>
            <div class=" collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul id="in" class="nav navbar-nav">
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup">Signup</a></li>
                </ul>
                    <ul id="out" class="nav navbar-nav">
                    <li class="active" id="logout"><a>logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1>Resources for <%=data[0]["topic"]%></h1>
        <a href="/resource/<%=data[0]["topic"]%>"><button class="pull-right btn btn-primary">Add a resource</button></a>
       <hr>
        <hr>
        <hr>
    </div>
    <% data.forEach(function(res) { %>
    <div class="container">
        <div class="card">
            <div class="row">
                <a href="<%=res["resource_url"]%>" target="_blank" >
                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                        <h3><%=res["name"]%><br>
	                        <small><%=res["description"]%><br><!--<small>submitted by Batman</small>-->
	                        </small>
                        </h3>
                    </div>
                </a>
                <div class="col-lg-1 col-md-1 col-sm-9 col-xs-9">
                	<%if(res["type"]=="video"){%>
                    	<i class="details fa fa-video-camera" data-toggle="tooltip" data-placement="top" title="video" aria-hidden="true"></i>
                    <%}%>
                    <%if(res["type"]=="book"){%>
                    	<i class="details fa fa-book" data-toggle="tooltip" data-placement="top" title="book" aria-hidden="true"></i>
                    <%}%>
                    <%if(res["type"]=="blog"){%>
                    	<i class="details fa fa-rss-square" data-toggle="tooltip" data-placement="right" title="blog/guide" aria-hidden="true"></i>
                    <%}%>
                    <span class="details">
                    <%if(res["cost"]){%>
	                    <font color="red"><small>Paid</small>
	                    </font>
	                    <%}%>
	                 <%if(!res["cost"]) {%>
	                    <font color="green"><small>free</small>
	                    </font>
	                    <%}%>   
                    </span>
                    <%if(res["certificate"]){%>
                    <i class="details fa fa-certificate" aria-hidden="true"></i>
                    <%}%>
                </div>
                <div class="row vertical-align col-lg-2 col-md-2 col-sm-3 col-xs-3">
                    <div class="col-xs-6">
                        <i id="tu<%=res["id_no"]%>"  class="thumb_up material-icons">thumb_up</i>
                        <i id="td<%=res["id_no"]%>"  class="thumb_down material-icons">thumb_down</i>
                    </div>
                    <div class="col-xs-6">
                    	<%if(res["total_votes"]==null){res["total_votes"]=0}%>
                        <span id="tv<%=res["id_no"]%>" class="votes"><%=res["total_votes"]%></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%})%>


        <%include partials/footer%>
